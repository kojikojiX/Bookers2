
    <div class = "user info">
      <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class = "table">
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introducton</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>
        <div class="row">
        <% if user.id != current_user.id %>
            <%= link_to "", user_path(current_user.id), class: "col-xs-3 btn btn-default glyphicon glyphicon-wrench" %>
        <% else %>
            <%= link_to "", edit_user_path(current_user.id), class: "col-xs-3 btn btn-default glyphicon glyphicon-wrench" %>
        <% end %>
        </div>
    </div>

    <div class = "New book" >
      <% if book.errors.any? %>
        <div>
          <ul style="color: red">
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h1>New book</h1>
      <%= form_for(book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <P>Option</P>
      <%= f.text_area :body %>
      <div class = "button">
        <%= f.submit 'Create Book', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
