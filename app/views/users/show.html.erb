<% if @user.errors.any? %>
<%= pluralize(@user.errors.count,"error") %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<% if user_signed_in? %>
<div class = "container">
	<div class = "row">
		<div class = "col-xs-3">
			<%= render '/all', user: @user, book: @book%>
		</div>
		<div class = "col-xs-9">
			<h2>Books</h2>
			<table class = "table table-striped">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Option</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image,format: 'jpeg', fallback: 'no_image.jpg', size: '40x40'%></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
		        </table>
		</div>
	</div>
</div>
<% end %>