<div class="container">
	<div class="row">
		<h1>Editing Books</h1>
		<% if @book.errors.any? %>
			<%= pluralize(@book.errors.count,"error") %>
		    <ul>
		        <% @book.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
		        <% end %>
		    </ul>
		<% end %>

		<%= form_for(@book) do |f| %>
		<h5>Title</h5>
		<%= f.text_field :title %>
		<h5>Option</h5>
		<%= f.text_area :body %>
		<div class="btn"><%= f.submit 'Update Book' %></div>
		<% end %>
		<%= link_to "Show", book_path(@book.id) %>
		<%= link_to "Back", books_path %>
	</div>
</div>