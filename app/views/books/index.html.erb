<% if @book.errors.any? %>
<%= pluralize(@book.errors.count,"error") %>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<div class = "container">
	<div class = "row">
		<div class="col-xs-3">
			<%= render '/all', {user: @user, book: @book} %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class = "table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Option</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :profile_image,format: 'jpeg', fallback: 'no_image.jpg', size: '40x40'%>
						<% end %>
						</td>
					<td><%=link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>